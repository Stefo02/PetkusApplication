<Window x:Class="PetkusApplication.Views.Racunanjeponude"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PetkusApplication.Views"
        Title="Racunanjeponude" Height="450" Width="800">
    <Grid>
        <DataGrid Name="SelectedItemsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Opis" Binding="{Binding Opis}"/>
                <DataGridTextColumn Header="Fabricki_kod" Binding="{Binding Fabricki_kod}"/>
                <DataGridTextColumn Header="Puna cena" Binding="{Binding Puna_cena}"/>
                <DataGridTextColumn Header="Dimenzije" Binding="{Binding Dimenzije}"/>
                <DataGridTextColumn Header="Disipacija" Binding="{Binding Disipacija}"/>
                <DataGridTextColumn Header="Tezina" Binding="{Binding Tezina}"/>
                <DataGridTextColumn Header="Kolicina" Binding="{Binding Kolicina}"/>
                <DataGridTextColumn Header="Vrednost rabata" Binding="{Binding Vrednost_rabata}"/>
                <DataGridTextColumn Header="Ukupna puna" Binding="{Binding Ukupna_puna}"/>
                <DataGridTextColumn Header="Ukupna rabat" Binding="{Binding Ukupna_rabat}"/>
                <DataGridTextColumn Header="Ukupna Disipacija" Binding="{Binding Ukupna_Disipacija}"/>
                <DataGridTextColumn Header="Ukupna Tezina" Binding="{Binding Ukupna_Tezina}"/>
                <DataGridTextColumn Header="Količina za naručivanje" Binding="{Binding KolicinaZaNarucivanje}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Formiraj ponudu" Click="GenerateExcel_Click" Margin="20,0,617,20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="157" Background="#001f5b"/>
        <Button Content="Potvrdi ponudu" Click="UpdateAndExport_Click" Margin="0,0,33,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#001f5b"/>
    </Grid>
</Window>

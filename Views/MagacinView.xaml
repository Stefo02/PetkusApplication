<UserControl x:Class="PetkusApplication.Views.MagacinView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PetkusApplication.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1600" Background="#ffb81c" MouseDown="Window_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ComboBox for selecting the table -->
        <ComboBox x:Name="tableComboBox" Grid.Row="0" Width="270" Margin="10" SelectionChanged="tableComboBox_SelectionChanged"/>

        <!-- DataGrid to display the items -->
        <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False" SelectionChanged="dataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Opis" Binding="{Binding Opis}" Width="*"/>
                <DataGridTextColumn Header="Proizvodjac" Binding="{Binding Proizvodjac}" Width="*"/>
                <DataGridTextColumn Header="Fabricki Kod" Binding="{Binding Fabricki_kod}" Width="*"/>
                <DataGridTextColumn Header="Kolicina" Binding="{Binding Kolicina}" Width="*"/>
                <DataGridTextColumn Header="Puna Cena" Binding="{Binding Puna_cena}" Width="*"/>
                <DataGridTextColumn Header="Dimenzije" Binding="{Binding Dimenzije}" Width="*"/>
                <DataGridTextColumn Header="Tezina" Binding="{Binding Tezina}" Width="*"/>
                <DataGridTextColumn Header="Vrednost Rabata" Binding="{Binding Vrednost_rabata}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- StackPanel for search and CRUD controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <!-- Grid for search TextBox and placeholder -->
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="searchTextBox" Width="200" VerticalAlignment="Center" Grid.Column="1" KeyDown="searchTextBox_KeyDown"/>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="5" Foreground="Gray" Text="Pretraži po Opisu ili Fabrickom kodu" IsHitTestVisible="False"/>
            </Grid>

            <!-- Search Button -->
            <Button Content="Pretraži" Width="95" Margin="5" Click="SearchButton_Click"/>

            <!-- Existing TextBoxes and Buttons for CRUD operations -->
            <TextBox x:Name="opisTextBox" Width="100" Margin="5"/>
            <TextBox x:Name="proizvodjacTextBox" Width="100" Margin="5"/>
            <TextBox x:Name="fabrickiKodTextBox" Width="100" Margin="5"/>
            <TextBox x:Name="kolicinaTextBox" Width="50" Margin="5"/>
            <TextBox x:Name="punaCenaTextBox" Width="50" Margin="5"/>
            <TextBox x:Name="dimenzijeTextBox" Width="100" Margin="5"/>
            <TextBox x:Name="tezinaTextBox" Width="50" Margin="5"/>
            <TextBox x:Name="vrednostRabataTextBox" Width="50" Margin="5"/>
            <Button Content="Add" Width="80" Margin="5" Click="AddButton_Click"/>
            <Button Content="Update" Width="80" Margin="5" Click="UpdateButton_Click"/>
            <Button Content="Delete" Width="80" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
